PACKAGE=odbc
DOC=odbc
include ../Makefile.defs

CFLAGS+= @ODBC_CFLAGS@ -I.
LDSOFLAGS+= @ODBC_LDFLAGS@

LIBS=@LIBS@
NETLIBS=@NETLIBS@

LIBPL=		@PLTARGETS@
TARGETS=	@TARGETS@

ODBCOBJ=	odbc.o

all:		$(TARGETS)

odbc4pl.@SO@:	$(ODBCOBJ)
		$(LD) $(LDSOFLAGS) -o $@ $(ODBCOBJ)  $(LIBPLSO) $(LIBS)

install:	$(TARGETS) $(LIBPL)
		mkdir -p $(DESTDIR)$(SOLIBDIR)
		for f in $(TARGETS); do \
		  $(INSTALL_PROGRAM) $$f $(DESTDIR)$(SOLIBDIR); \
		done
		for f in $(LIBPL); do \
		  $(INSTALL_DATA) $$f $(DESTDIR)$(PLLIBDIR); \
		done
		$(PL) -f none -g make -t halt

ln-install::
		@$(MAKE) INSTALL_DATA='../ln-install' INSTALL_PROGRAM='../ln-install' install

rpm-install:	install

html-install::
		mkdir -p $(DESTDIR)$(PKGDOCDIR)
		$(INSTALL) -m 644 $(DOC).html $(DESTDIR)$(PKGDOCDIR)

pdf-install::
		mkdir -p $(DESTDIR)$(PKGDOCDIR)
		$(INSTALL) -m 644 $(DOC).pdf $(DESTDIR)$(PKGDOCDIR)

uninstall::
		(cd $(SOLIBDIR) && rm -f $(TARGETS))
		(cd $(PLLIBDIR) && rm -f $(LIBPL))
		$(PL) -f none -g make -t halt

################################################################
# Check
################################################################

# Doesn't work with SQLite3 driver.
check::
#		$(PL) -f test_odbc.pl -q -g test_odbc -t halt

################################################################
# Clean
################################################################

clean:
		rm -f $(OBJ) *~ *.o *% a.out core config.log

distclean:	clean
		rm -f $(TARGETS) config.cache config.h config.status Makefile
		rm -f $(DOC).aux $(DOC).log $(DOC).out $(DOC).toc
		rm -rf html
